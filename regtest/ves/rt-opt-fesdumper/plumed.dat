# vim:ft=plumed

phi:   TORSION ATOMS=5,7,9,15     NOPBC

bf1: BF_FOURIER ORDER=5 INTERVAL_MIN=-pi INTERVAL_MAX=pi

VES_LINEAR_EXPANSION ...
 ARG=phi
 BASIS_FUNCTIONS=bf1
 LABEL=ves1
 TEMP=300.0
 GRID_BINS=100
... VES_LINEAR_EXPANSION

FES_DUMPER ...
  BIAS=ves1
  FES_OUTPUT=5
  BIAS_OUTPUT=5
  COEFFS_INPUT=coeffs.input.data
... FES_DUMPER

ENDPLUMED

