# vim:ft=plumed

arg1: READ FILE=arg.in VALUES=arg IGNORE_TIME

BF_LEGENDRE ...
 ORDER=20
 INTERVAL_MIN=-4.0
 INTERVAL_MAX=4.0
 LABEL=bf
 DEBUG_INFO
 SCALED
... BF_LEGENDRE

DUMP_BASISFUNCTIONS ...
 BASIS_SET=bf
 GRID_BINS=300
 TARGET_DISTRIBUTION1=UNIFORM
 TARGET_DISTRIBUTION2={UNIFORM MINIMA=-4.0 MAXIMA=4.0}
 TARGET_DISTRIBUTION3={GAUSSIAN CENTER=0.0 SIGMA=0.5}
 TARGET_DISTRIBUTION4={GAUSSIAN CENTER=-2.0 SIGMA=0.5}
 TARGET_DISTRIBUTION5={GAUSSIAN CENTER=+2.0 SIGMA=0.5}
 TARGET_DISTRIBUTION6={GAUSSIAN CENTER=+0.333 SIGMA=0.5}
 FORMAT_VALUES_DERIVS=%13.6f
 FORMAT_TARGETDIST_AVERAGES=%13.6f
... DUMP_BASISFUNCTIONS


BF_LEGENDRE ...
 ORDER=20
 INTERVAL_MIN=-6.5
 INTERVAL_MAX=1.5
 LABEL=bf2
 DEBUG_INFO
 SCALED
... BF_LEGENDRE

DUMP_BASISFUNCTIONS ...
 BASIS_SET=bf2
 GRID_BINS=300
 TARGET_DISTRIBUTION1=UNIFORM
 TARGET_DISTRIBUTION2={UNIFORM MINIMA=-6.5 MAXIMA=1.5}
 TARGET_DISTRIBUTION3={GAUSSIAN CENTER=-2.5 SIGMA=0.5}
 TARGET_DISTRIBUTION4={GAUSSIAN CENTER=-4.5 SIGMA=0.5}
 TARGET_DISTRIBUTION5={GAUSSIAN CENTER=-0.5 SIGMA=0.5}
 TARGET_DISTRIBUTION6={GAUSSIAN CENTER=-2.167 SIGMA=0.5}
 FORMAT_VALUES_DERIVS=%13.6f
 FORMAT_TARGETDIST_AVERAGES=%13.6f
... DUMP_BASISFUNCTIONS



# This is to test analytical equations versus numerical 
# integration for the uniform distribution
DUMP_BASISFUNCTIONS ...
 BASIS_SET=bf2
 GRID_BINS=300
 TARGET_DISTRIBUTION1=UNIFORM
 FORMAT_TARGETDIST_AVERAGES=%13.6f
 FILE_VALUES=/dev/null
 FILE_DERIVS=/dev/null
 FILE_TARGETDIST_AVERAGES=bf2.uniform-analytical.data
... DUMP_BASISFUNCTIONS

BF_LEGENDRE ...
 ORDER=20
 INTERVAL_MIN=-6.5
 INTERVAL_MAX=1.5
 LABEL=bf2n
 DEBUG_INFO
 SCALED
 NUMERICAL_INTEGRALS
... BF_LEGENDRE

DUMP_BASISFUNCTIONS ...
 BASIS_SET=bf2n
 GRID_BINS=300
 TARGET_DISTRIBUTION1=UNIFORM
 FORMAT_TARGETDIST_AVERAGES=%13.6f
 FILE_VALUES=/dev/null
 FILE_DERIVS=/dev/null
 FILE_TARGETDIST_AVERAGES=bf2.uniform-numerical.data
... DUMP_BASISFUNCTIONS

